<BG>:
  size: self.size
  pos: self.pos
  canvas:
    Color:
      rgba: 1,1,1,1
    RoundedRectangle:
      pos: self.pos
      size: self.size
      radius: [self.r,self.r,self.r,self.r]

<Grid>:
  size: self.size
  pos: self.pos
  canvas.before:
    PushMatrix
    Rotate:
      angle: self.rotation
      origin: self.center
    Color:
      rgba: self.shade
    Rectangle:
      pos: self.pos
      size: self.size
      source: self.src
  canvas.after:
    PopMatrix

    Color:
      rgba: self.overlay_col
    Rectangle:
      pos: self.pos
      size: self.size
      source: self.overlay

<Tower>:
  size: self.size
  pos: self.pos

  canvas.before:
    PushMatrix
    Color:
      rgba: 1,1,1,1
    Rectangle:
      pos: self.pos
      size: self.size
      source: self.turret
  canvas.after:
    PopMatrix

  Color:
    rgba: 1,1,1,1
  Rectangle:
    pos: self.pos
    size: self.size
    source: self.base

<Game>:
  bg: bg
  BG:
    id: bg
    size: self.parent.proper_w,self.parent.proper_h
    center: self.parent.center
